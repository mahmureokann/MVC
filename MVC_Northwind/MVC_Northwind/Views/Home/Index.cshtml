
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">

    <div id="layoutSidenav">

        <div id="layoutSidenav_content">


            <main>
                <div class="container-fluid px-4">
                    <h1 class="mt-4">Dashboard</h1>
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                    <div class="row">
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-primary text-white mb-4">
                                <div class="card-body">Toplam Ürün</div>

                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">@TempData["ProductNumber"]</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-warning text-white mb-4">
                                <div class="card-body">Çalışanlar</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">@TempData["EmployeeNumber"]</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-success text-white mb-4">
                                <div class="card-body">Sipariş Adet</div>
                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">@TempData["OrderNumber"]</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6">
                            <div class="card bg-danger text-white mb-4">
                                <div class="card-body">Müşteri</div>

                                <div class="card-footer d-flex align-items-center justify-content-between">
                                    <a class="small text-white stretched-link" href="#">@TempData["CustomerNumber"]</a>
                                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                </div>


                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6">

                        </div>
                        <div class="col-xl-6">

                        </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Müşteriler

                            <a href="~/Views/Customer/AddCustomer" class="btn btn-primary">Müşteri ekle</a>


                        </div>
                       
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>Company Name</th>
                                        <th>Contact Name</th>
                                        <th>Contact Title</th>
                                        <th>City</th>
                                        <th>Address</th>
                                    </tr>
                                </thead>
                                <tfoot>


                                </tfoot>
                                <tbody>
                                    @foreach (var customers in TempData["Customers"] as List<MVC_Northwind.Models.Customer>)
                                    {
                                        <tr>
                                            <td>@customers.CustomerID</td>
                                            <td>@customers.CompanyName</td>
                                            <td>@customers.ContactName</td>
                                            <td>@customers.ContactTitle</td>
                                            <td>@customers.City</td>
                                            <td>@customers.Address</td>

                                            <td> <a href="CustomerDetaylari/@customers.CustomerID" class="btn btn-sm btn-primary">Details</a></td>
                                        </tr>
                                    }




                                </tbody>
                            </table>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xl-6">

                        </div>
                        <div class="col-xl-6">

                        </div>
                    </div>
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-table me-1"></i>
                            Son Siparişler

                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>OrderID</th>
                                        <th>Order Date</th>
                                        <th>Ship Name</th>
                                        <th>Ship City</th>
                                        <th>Ship Country</th>
                                    </tr>
                                </thead>
                                <tfoot>


                                </tfoot>
                                <tbody>
                                    @foreach (var orders in TempData["SonSiparisler"] as List<MVC_Northwind.Models.Order>)
                                    {
                                        <tr>
                                            <td>@orders.OrderID</td>
                                            <td>@orders.OrderDate</td>
                                            <td>@orders.ShipName</td>
                                            <td>@orders.ShipCity</td>
                                            <td>@orders.ShipCountry</td>
                                            <td>  <a href="Details/@orders.OrderID" class="btn btn-sm btn-primary">Details</a></td>


                                        </tr>
                                    }




                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Content/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="assets/demo/chart-area-demo.js"></script>
    <script src="assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="js/datatables-simple-demo.js"></script>
</body>
</html>


