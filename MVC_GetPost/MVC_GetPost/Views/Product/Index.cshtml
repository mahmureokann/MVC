@model List<MVC_GetPost.Models.Product>


<!DOCTYPE html>


<!--Asp.Net Razor View Engine => Html kodları arasında C# yazmamıza olanak sağlayan bir motordur.-->
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h2>Ürünler</h2>

        <table width="50%" border="1">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Stok Miktari</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(MVC_GetPost.Models.Product product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td>
                        <a href="#">Düzenle</a>
                    </td>
                </tr>
            }
            </tbody>
       
        </table>

        <a href="/Product/AddProduct">Ürün ekle</a>
    </div>
</body>
</html>
